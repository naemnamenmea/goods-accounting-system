@model IEnumerable<GoodsAccountingSystem.ViewModels.UserViewModel>
@using GoodsAccountingSystem.Helpers
@{
    ViewBag.Title = "Список пользователей";
}

<div>
    <h2 class="text-center">Список пользователей</h2>
</div>

@(Html
        .Grid("_CustomGrid", Model)
        .Build(columns =>
        {
            columns.Add(model => model.Email).Titled("Name");
            columns.Add(model => model.FirstName).Titled("Name");
            columns.Add(model => model.SecondName).Titled("Name");
            columns.Add(model => model.MiddleName).Titled("Name");
            columns.Add(model => model.Role).Titled("Name");
        })
        .Empty("No data found")
        .Pageable(pager =>
        {
            pager.PagesToDisplay = 5;
            pager.RowsPerPage = 20;
        })
        .Sortable()
        .Pageable()
)

<partial name="_FormScripts" />
@section Scripts {
    <partial name="_HandleErrorModal" />
}


