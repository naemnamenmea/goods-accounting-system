@model GoodsAccountingSystem.Models.GoodModel

<div class="modal fade" id="addGoodModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Редактирование записи</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="" onsubmit="SubCreateGoodForm(); return false;" id="createGoodForm">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CreationDate" class="control-label"></label>
                        <input asp-for="CreationDate" class="form-control" />
                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Attachment" class="control-label"></label>
                        <input asp-for="Attachment" class="form-control" />
                        <span asp-validation-for="Attachment" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="сохранить" class="btn btn-primary" />
                    <button type="button" class="btn btn-light border-dark" data-dismiss="modal">отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    <script>
        function SubCreateGoodForm() {
            $.ajax({
                url: '/Goods/Create/',
                type: 'post',
                data: $('#createGoodForm').serialize(),
                success: function (response) {
                    console.log("create good: success");
                    console.log(response);
                },
                error: function () {
                    console.log("create good: fail");
                }
            });
            $('#addGoodModal').modal('hide');
        }
    </script>
}