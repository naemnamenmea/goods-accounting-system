@using GoodsAccountingSystem.Helpers

<script>
    function showModal(controller, action) {
    $.ajax({
        url: `/${controller}/${action}/`,
        type: 'get',
        success: function (response) {
            $('#@Constants.MODAL_HOLDER').empty().append(response);
            $('#@Constants.MODAL_ID').modal('show');
        },
        error: function () { }
    });
}
</script>