@model GoodsAccountingSystem.ViewModels.DeleteUserViewModel
@using GoodsAccountingSystem.Helpers

@{
    ViewBag.Title = "Delete";
}

<div id="@Constants.MODAL_ID" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-confirm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Вы действительно хотите удалить данного пользователя?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SecondName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SecondName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.MiddleName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.RegisterDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RegisterDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.BirthDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Users" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-light border-dark" data-dismiss="modal">Отмена</button>
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>